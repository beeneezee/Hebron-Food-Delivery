<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="bee.hb.testo.InfoActivity">

    <android.support.v7.widget.CardView
        android:elevation="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:src="@drawable/logo" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/hbapps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="hB Apps"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:fontFamily="serif"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:text="©2019 Asmara"
        android:textAlignment="center"
        android:textColor="@color/bluetext"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/emailhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="johnkes55ete@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/bluetext"
        android:textSize="16sp"
        android:autoLink="email"
        android:textColorLink="@color/bluetext" />

    <TextView
        android:id="@+id/emailbee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="beeni2019@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/bluetext"
        android:textSize="16sp"
        android:autoLink="email"
        android:textColorLink="@color/bluetext" />


    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="+2917541352"
        android:textAlignment="center"
        android:textColor="@color/bluetext"
        android:textSize="16sp"
        android:autoLink="phone"
        android:textColorLink="@color/bluetext" />



    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.74"
        android:text="© 2019 Asmara"
        android:textAlignment="center"
        android:gravity="bottom"
        android:textColor="@color/colorRed"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:typeface="normal"
        android:fontFamily="casual" />
</LinearLayout>
