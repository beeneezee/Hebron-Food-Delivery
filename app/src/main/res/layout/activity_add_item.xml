<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_news_paper_chooser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animationCache="true"
    android:background="@drawable/row_rounded_background"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/dialogitemtitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="@string/app_namet"
        android:textColor="@color/colorWhite"
        android:textSize="35sp"
        android:textStyle="bold|italic" />

    <android.support.v7.widget.CardView
        android:id="@+id/idCardView0"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="5dp"
        android:elevation="30dp"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/dialogitemimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/piz0" />


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/arabic"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_weight="0.24"
        android:orientation="horizontal"
        android:weightSum="100">

        <Spinner
            android:id="@+id/dialogcounter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="left|center_vertical"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialogcost"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:layout_weight="37.00"
            android:padding="20dp"
            android:paddingLeft="15dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorRed"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>


    <!-- android:drawableTop="@android:drawable/btn_star"-->
    <Button
        android:enabled="false"
        android:id="@+id/dialogadd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/button_rounded_background"
        android:elevation="10dp"
        android:text="Add to cart"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>
