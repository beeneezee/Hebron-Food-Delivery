<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/lang_list_titles"
        android:entryValues="@array/lang_list_values"
        android:key="display_language"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/lange" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/theme_list_titlese"
        android:entryValues="@array/theme_list_values"
        android:key="app_theme"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/themee" />
    <EditTextPreference
        android:defaultValue=""
        android:key="password"
        android:backgroundTint="@color/colorAccent"
        android:title="Password"></EditTextPreference>


</PreferenceScreen>
